<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/recyclerviewforresortlist"
    android:layout_width="match_parent"
    android:layout_height="370dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/layoutForImageOfResort"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewResortPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="-50dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:id="@+id/tv_place"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="-50dp"
            android:id="@+id/tv_state"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/tv_place"
            android:layout_alignBottom="@+id/tv_place"
            android:layout_toRightOf="@+id/tv_place"
            android:layout_toEndOf="@+id/tv_place"
            android:layout_marginRight="10dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="-50dp"
            android:id="@+id/tv_terrain"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/get"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_state"
            android:layout_toEndOf="@+id/tv_state"
            android:layout_marginRight="10dp"
           />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_roomsunavailable"
            android:textSize="25dp"
            android:layout_height="-100dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="-40dp"
            android:layout_toLeftOf="@+id/tv_terrain"
            android:layout_toEndOf="@+id/tv_place"
            android:background="@color/white"
            android:layout_toRightOf="@+id/tv_place" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:id="@+id/layoutforreviews"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/_0_review"
            android:drawablePadding="5dp"
            android:layout_weight="0.5"
            android:textColor="@color/greycolor"
            android:drawableLeft="@drawable/star"
            android:layout_marginBottom="20dp"
            />
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.5"
    android:gravity="center"
    android:textColor="@color/greycolor"
    android:id="@+id/tv_totalroomavailble"
    android:layout_marginBottom="20dp"
    />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_roomsavailable"
            android:drawableLeft="@drawable/r2"
            android:textColor="@color/greycolor"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>